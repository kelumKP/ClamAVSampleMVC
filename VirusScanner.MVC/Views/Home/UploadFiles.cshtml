@{
    ViewData["Title"] = "Upload Files";
}
<div>
    <form method="post" enctype="multipart/form-data" asp-controller="UploadFiles" asp-action="Index">
        <div class="form-group">
            <div class="col-md-10 custom-file">
                <input id="files"  name="files" type="file" class="custom-file-input" multiple />
                <label class="custom-file-label" for="files">Upload one or more files to be scanned</label>
            </div>
        </div>
        <input type="submit" class="btn btn-primary" value="Upload" />
    </form>
</div>

@section scripts
{
    <script>
        $(".custom-file-input").on("change", function () {
            var fileNames =  Array.from(this.files).map(file => file.name).join(', ');
            $(this).siblings(".custom-file-label").addClass("selected").html(fileNames);
        });
    </script>
}
